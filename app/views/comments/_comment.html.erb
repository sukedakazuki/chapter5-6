<table class='table'>
<% book.comments.each do |comment| %> 
  <tr>
    <td>
      <%= link_to(@book.user) do %>
        <%= image_tag comment.user.get_profile_image, size:"100x100" %><br>
        <%= comment.user.name %>
      <% end %>
    </td>
    <td><%= comment.comment %></td>
    <td>
      <% if comment.user == current_user %>
        <%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      <% end %>
    </td>
  </tr>
</table>
<% end %>
<tr>
  <%= form_with model: [@book, comment], url: '/todolists', local: false do |f| %>
    <%= f.text_area :comment, rows: '5' %>
    <%= f.submit "送信" %>
  <% end %>
</tr>